<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="10dp">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvNomeColaborador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rl"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/rl"
        android:text='Nome'
        android:textColor="#FFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDataReservada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNomeColaborador"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/rl"
        android:text="Data: 12-6-2017"
        android:textColor="#dae7ef"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvHoraReservada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDataReservada"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/rl"
        android:text="Hora: 12:3"
        android:textColor="#dae7ef"
        android:textSize="15sp" />
</RelativeLayout>